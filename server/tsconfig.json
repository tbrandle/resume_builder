{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",                             

    "outDir": "./dist",                                  

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,                                
    "types": ["@types/jest", "@quramy/jest-prisma"]
  },
  "include": ["./*.ts",  "__test__"],
  "exclude": ["node_modules"]
}
